sans-serif = 		"TrendSansOne"
orange =            #ff8433
dark =				#3c3c3c
.spectrum-container
 display none


ul.use-spectrum li.sm2_playing .spectrum-container 
 position absolute
 left 0px
 top 0px
 margin-left -266px
 margin-top -1px
 display block
 background-color #5588bb
 border 1px solid #99ccff
 border-radius 4px


ul.use-spectrum .spectrum-box 
 position relative
 width 255px
 font-size 1em
 padding 2px 0px
 height 1.2em
 overflow hidden


ul.use-spectrum .spectrum-box .spectrum 
 position absolute
 left 0px
 top -2px
 margin-top 20px
 display block
 font-size 1px
 width 1px
 height 1px /* set to 50px for a thick line, 1px for a thin line, etc. */
 overflow hidden
 background-color #fff

ul.playlist 
 list-style-type none
 margin 0
 //padding .5em
 border-radius 4px



ul.playlist li 
 /* assume all items will be sounds rather than wait for onload etc. in this example.. may differ for your uses. */
 position relative
 margin .45em 0
 display block
 width auto
 font-size 1em
 color #666
 //padding 0.25em 0.5em 0.25em 0.5em
 border none
 letter-spacing -1px /* ZOMG WEB X.0. ) */
 //background-color #f9f9f9
 -webkit-transition-property  hover
 -webkit-transition  background-color 0.15s ease-in-out
 -moz-transition  background-color 0.15s linear 0s /* firefox 4 */
  -o-transition-property  background-color /* opera 10.5 */
  -o-transition-duration  0.15s

ul.playlist.init
	margin-bottom 0
	padding 0
	background none

ul.playlist.main,
ul.playlist-nav
	display none

ul.playlist.small-list
	li
		font-size 120%
		background url('../../images/play.png') 0% 50% no-repeat
		padding-left 20px
	li.sm2_playing,
	li.sm2_paused
		font-size 90%
		background none
		padding-left 0

ul.playlist.main li
	margin 0

ul.playlist,
ul.playlist-nav
	ul.upcoming-episode
		margin-top 1em
		font-family sans-serif
		text-transform uppercase
		letter-spacing -0.08em
		li
			padding-left 16px
			font-size 70%
			margin .5em 0
			color grey
			background none
ul.playlist-nav
	list-style-type none
	font-family sans-serif
	text-transform uppercase
	font-size 80%
	padding 0
	span
		padding: 3px 0 5px
	a
		text-decoration none
		&.active
			color grey
			i
				background-color: grey
				background-position center left
		&.playing
			i
				//background-position center right
				background-position center left

	li
		margin .2em 0
	i
		width: 16px
		height: 11px
		margin-top:5px
		display: inline-block
		*float: left
		background-color: #333
		background-image: url("../../images/playlist-nav.png")
		background-position: center left
		background-repeat:no-repeat

//NEW PLAYER STYLE 2013-12-09
ul.playlist-nav
	.new-play
		font-size 110%
		padding-top 1.3em
		span
			//font-family 'Courier'
			//text-transform none
			font-size 60%
			color grey
			padding-left 33px
			margin 0

		i
			background-image url("../../images/playlist-play-pause.png")
			background-position 25% -40%
			background-color grey
			border-radius 50%
			height 1.8em
			width 1.8em
			margin-right 0.5em
			margin-top 3px
			float left
			transition-property color, background-color
			transition-duration 0.3s, 0.3s;   
			transition-timing-function linear, linear
		.active
			color #393a39
			i
				background-image url("../../images/playlist-play-pause.png")
				background-position 25% -40%
				background-color grey
		.active.playing i
			background-color dark
			background-position 25% 105%!important
		&:hover
			i
				background-color dark
		.text
			float left
			h5
				color grey
				line-height 100%
				font-size 80%
				padding-bottom 0.3em
				margin 0
			h4
				line-height 120%
				margin 0
ul.playlist.small
	.new-play
		background-image url('../../images/play_small.png')
		background-repeat no-repeat
		background-position 0 0
		padding-left 35px
		margin 1.5em 0 .6em
		h5
			color grey
			font-size 90%
			line-height 1
		p
			margin 0
			font-family sans-serif
			text-transform uppercase
			padding .5em 0 0
			color grey
			font-size 50%
