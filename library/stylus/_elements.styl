/******************************************************************
ELEMENTS (Buttons and such)
******************************************************************/
hr
  height 4px
  border-bottom 0px
  border-top 0px
  border-left 0px
  border-right 0px
  clear both
  background url(../images/dot.png) repeat-x
  margin 0 auto
  column(12)

.partner-footer-logos
  img
    max-width 100%
    height auto
#scrolltop-btn
  position fixed
  bottom 0
  right 5%
  display block
  z-index 9999
  background-color grey
  background-image url(../images/scroll-btn.png)
  background-repeat no-repeat
  box-shadow -1px 0 5px rgba(0,0,0,0.3)
  border-radius 50% 50% 0 0
  width 43px
  height 39px
  transition-property background-color
  transition-duration 0.12s   
  transition-timing-function linear
  &:hover,
  &:focus
    background-color darken(grey,30%)
#infscr-loading
  width 100%
  text-align center
  img
    width 50px
    height auto
header
  ul.social-icons
    li
      float right
      display block
      padding-left .5em
      padding-right 0

.veckans-bok
  height 40px
  width 40px
  border-radius 50%
  background-image url('../images/veckans-bok.png')
  background-repeat none
  background-position center center
  right -5px
  top -5px
  position absolute
  z-index 10

  display none
.archive .veckans-bok
  display block

ul.social-icons
  clear both
  h5
    color grey
  li
    float left
    display block
    padding-right .5em
    a
      background-image url(../images/social-icons.png)
      background-repeat none
      background-color grey
      border-radius 50%
      width 35px
      height 35px
      display block
      transition-property background-color
      transition-duration 0.12s   
      transition-timing-function linear

      &.itunes-link
        background-position 0% 50%
      &.rss-link
        background-position 25% 0%
      &.facebook-link
        background-position 50% 0%
      &.twitter-link
        background-position 75% 0%
      &.instagram-link
        background-position 100% 0%
      &:hover,
      &:focus
        background-color darken(grey,30%)



#ssba
  position relative
  padding .5em 0 0
  img
    padding 0
    max-width 36px
  .share-button
    float left
    background url(../images/gradient.png) 0% 70% repeat-x
    margin 0 .3em
    min-height 3em
    a
      position relative
      transition-property top
      transition-duration 0.1s   
      transition-timing-function ease-in-out
      &:hover,
      &:focus
        top -3px
    .ssba_sharecount
      border none
      border-radius 0
      clear both
      width 100%
      text-align center
      background transparent
      color grey
      font .8em serif
      padding 2px
      position: relative;
      top -9px

//FORMS
validation = bread
validation-highlight = orange
.gform_wrapper
  padding-bottom 1em
  max-width 100%!important
  label
    font-family sans-serif
    font-size 70%
  span
    label
      font-size 50%!important
      color grey
  .gfield_required
    display none
  input,
  textarea
    font-size .8em!important
    border-radius 8px
    border none
    background light-grey
    padding .8em!important
    color bread!important
  .gform_button
    font-family sans-serif!important
    border none!important
  .gform_ajax_spinner
    height 16px
    width auto
  .gform_footer
    margin-top 0!important
  //VALIDATION
  .validation_error
      display none
  .gfield_error
    background url(../images/diagonal-noise.png)!important
    border-top none!important
    border-bottom none!important
    margin-top .5em!important
    margin-bottom .5em!important
    padding 0!important
    border-left 5px solid orange
    label,
    .validation_message
      color validation!important
    input,
    textarea
      border-color transparent!important
      background-color validation-highlight
    .validation_message
      font-family sans-serif!important
      font-size 70%
      color lighten(validation,50%)!important
      text-transform uppercase!important
      padding .3em 0 .8em!important
    label,
    input,
    textarea,
    div,
    .gfield_contains_required
      margin-top 0 !important
      margin-bottom 0 !important
      font-weight normal!important



//TABS
#tabs .columns
  height 430px
  .column
    padding 0 30px 0 0
    font-size 90%
.ui-tabs
  position relative

  .ui-tabs-nav
    margin 0
    padding .2em .2em 0
    font-family sans-serif
    font-size 70%

    li
      list-style none
      float right
      position relative
      top 0
      margin 1px 0 0 .5em
      border-bottom-width 0
      padding 0
      white-space nowrap
      a
        float left
        padding .3em .8em
        border-radius 0.5em
        text-decoration none
        color grey

      &.ui-tabs-active
        margin-bottom -1px
        padding-bottom 1px
        a
          text-decoration underline
          background lighten(grey,82%)
      &.ui-tabs-active a,
      &.ui-state-disabled a,
      &.ui-tabs-loading a
        cursor text

  .ui-tabs-nav li a,
  .ui-tabs-collapsible .ui-tabs-nav li.ui-tabs-active a
    cursor pointer
    outline 0
  .ui-tabs-panel
    display block
    border-width 0
    padding .3em 0
    background none
    clear both

// GRID SORTING
.sorting
  font-family sans-serif
  font-size 90%
  min-height 1em
  padding 1em 0
  width 100%
  clear both
  h4
    margin 1em 0 .5em
    padding 0
  a
    text-decoration none
    color grey
    border-radius 0.5em
    padding 0.5em
  ul
    list-style-type none
    -webkit-padding-start 0
    -webkit-margin-before 0
    -webkit-margin-after 0
    float left
    color grey
    li
      margin-bottom .5em
      float left
  .sort-by
    .active
      a
        color black
  .sort-order
    clear both
    font-size 80%
    a
      color grey
      padding 0

// CHOSEN
.filters
  h4,h5
    text-align center
    color cream
  .fold-out-filter
    box-shadow 5px 5px 0px darken(orange,60%)
    background orange
    border 3px solid orange
    cursor pointer
    span
      background-image url(../images/chosen-sprite.png)
      background-repeat no-repeat
      background-position -30px -44px
      padding-left 20px
      color cream
      margin 0
    
  .filters-foldout
    display none
    background orange
    padding 10px
    box-shadow 5px 5px 0px darken(orange,60%)
    margin-top 20px


.no-js select.chosen-select
    display block
select.chosen-select
    display none
    width 100%
    margin 7px 0

.chosen-container
  margin .4em 0
  position relative
  vertical-align middle
  font-family sans-serif
  zoom 1
  *display inline
  -webkit-user-select none
  -moz-user-select none
  user-select none
  .chosen-drop
    position absolute
    top 100%
    left -9999px
    z-index 1010
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    width 100%
    //border 1px solid #aaa
    border-top 0
    background #fff
    box-shadow 0 4px 5px rgba(0, 0, 0, 0.15)
    border-radius 1em
    padding .3em
    margin-top .3em
  &.chosen-with-drop
    .chosen-drop
      left 0
  a
    cursor pointer
  .chosen-results
    position relative
    overflow-x hidden
    overflow-y auto
    margin 0 4px 4px 0
    padding 0 0 0 4px
    max-height 80px
    -webkit-overflow-scrolling touch
    li
      display none
      margin 0
      padding 5px 6px
      list-style none
      line-height 15px
      color black
      border-radius 5px
      &.active-result
        display list-item
        cursor pointer
        color #333
        &:hover,&:focus
          background-color grey
          color #fff
      &.disabled-result
        display list-item
        color #ccc
        cursor default
      &.highlighted
        background-color grey
        color #fff
      &.no-results
        display list-item
        background #f4f4f4
      &.group-result
        display list-item
        cursor default
      &.group-option
        padding-left 15px
      em
        font-style normal
        text-decoration underline

.chosen-container-single
  .chosen-single
    position relative
    display block
    overflow hidden
    padding 0 0 0 8px
    height 23px
    border 1px solid #aaa
    border-radius 5px
    background-color #fff
    background-clip padding-box
    box-shadow 0 0 3px white inset, 0 1px 1px rgba(0, 0, 0, 0.1)
    color #444
    text-decoration none
    white-space nowrap
    line-height 24px
    span
      display block
      overflow hidden
      margin-right 26px
      text-overflow ellipsis
      white-space nowrap
    abbr
      position absolute
      top 6px
      right 26px
      display block
      width 12px
      height 12px
      background-image url('../images/chosen-sprite.png')
      background-position -42px 1px 
      background-repeat no-repeat
      font-size 1px
      &:hover
        background-position -42px -10px
    div
      position absolute
      top 0
      right 0
      display block
      width 18px
      height 100%
      b
        display block
        width 100%
        height 100%
        background-image url('../images/chosen-sprite.png')
        background-position 0px 2px 
        background-repeat no-repeat
        font-size 1px

  .chosen-default
    color #999
  .chosen-single-with-deselect
    span
      margin-right 38px
  &.chosen-disabled
    .chosen-single
      abbr
        &:hover
          background-position -42px -10px
  .chosen-search
    position relative
    z-index 1010
    margin 0
    padding 3px 4px
    white-space nowrap
    input[type="text"]
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      box-sizing border-box
      margin 1px 0
      padding 4px 20px 4px 5px
      width 100%
      height auto
      outline 0
      border 1px solid #aaa
      background-image url('../images/chosen-sprite.png')
      background-position 100% -20px 
      background-repeat no-repeat
      background-color white
      font-size 1px
      font-size 1em
      font-family sans-serif
      line-height normal
      border-radius 0
  .chosen-drop
    margin-top -1px
    border-radius 0 0 4px 4px
    background-clip padding-box
  &.chosen-container-single-nosearch
    .chosen-search
      position absolute
      left -9999px

.chosen-container-multi
  .chosen-choices
    position relative
    overflow hidden
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    border-radius 1em
    margin 0
    padding .3em
    width 100%
    height auto !important
    height 1%
    //border 1px solid #aaa
    box-shadow 0px 1px 2px lighten(grey,20%)
    background-color white
    cursor text
    font-size 80%
    li
      float left
      list-style none
      &.search-field
        margin 0
        padding 0
        white-space nowrap
        input[type="text"]
          margin 1px 0
          padding 5px
          width 100%
          outline 0
          border 0 !important
          background transparent !important
          box-shadow none
          color #666
          font-size 82%
          font-family sans-serif
          line-height normal
          border-radius 0
        .default
          color #999
      &.search-choice
        position relative
        margin 3px 0 3px 5px
        padding .5em 1.5em .5em .5em
        //border 1px solid darken(light-grey,5%)
        background-color light-grey
        background-clip padding-box
        box-shadow 0 2px 3px rgba(0, 0, 0, 0.2)
        color #666
        line-height 13px
        cursor default
        border-radius .5em
        font-size 85%
        .search-choice-close
          position absolute
          top 3.5px
          right 3px
          display block
          width 20px
          height 12px
          background-image url('../images/chosen-sprite.png')
          background-position -32px 2px
          background-repeat no-repeat
          font-size 1px
          &:hover
            background-position -32px -9px
      &.search-choice-disabled
        padding-right 5px
        border 1px solid #ccc
        background-color #e4e4e4
        color #666
      &.search-choice-focus
        background #d4d4d4
        .search-choice-close
          background-position -42px -10px
  .chosen-results
    margin 0
    padding 0
    font-size 70%
  .chosen-drop
    .result-selected
      display list-item
      color #ccc
      cursor default

.chosen-container-active
  .chosen-single
    border 1px solid #5897fb
    box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
  &.chosen-with-drop
    .chosen-single
      border 1px solid #aaa
      -moz-border-radius-bottomright 0
      border-bottom-right-radius 0
      -moz-border-radius-bottomleft 0
      border-bottom-left-radius 0
      box-shadow 0 1px 0 #fff inset
      div
        border-left none
        background transparent
        b
          background-position -18px 2px
  .chosen-choices
    li
      &.search-field
          background-image url('../images/chosen-sprite.png')
          background-position 99% -20px
          background-repeat no-repeat
          width 100%
          input[type="text"]
            color #111 !important

.chosen-disabled
  opacity 0.5 !important
  cursor default
  .chosen-single
    cursor default
  .chosen-choices
    .search-choice
      .search-choice-close
        cursor default

.chosen-rtl
  text-align right
  .chosen-single
    overflow visible
    padding 0 8px 0 0
    span
      margin-right 0
      margin-left 26px
      direction rtl
    div
      right auto
      left 3px
    abbr
      right auto
      left 26px
  .chosen-single-with-deselect
    span
      margin-left 38px
  .chosen-choices
    li
      float right
      &.search-field
        input[type="text"]
          direction rtl
      &.search-choice
        margin 3px 5px 3px 0
        padding 3px 5px 3px 19px
        .search-choice-close
          right auto
          left 4px
  &.chosen-container-single
    .chosen-results
      margin 0 0 4px 4px
      padding 0 4px 0 0
    .chosen-single
      div
        b
          background-position 6px 2px
    &.chosen-with-drop
      .chosen-single
        div
          b
            background-position -12px 2px
  .chosen-results
    li
      &.group-option
        padding-right 15px
        padding-left 0
  &.chosen-container-active
    &.chosen-with-drop
      .chosen-single
        div
          border-right none
  .chosen-search
    input[type="text"]
      padding 4px 5px 4px 20px
      background-image url('../images/chosen-sprite.png')
      background-repeat no-repeat
      background-position -30px -20px
      background-color white
      direction rtl

.chosen-rtl.chosen-container-single-nosearch .chosen-search,
.chosen-rtl .chosen-drop
  left 9999px