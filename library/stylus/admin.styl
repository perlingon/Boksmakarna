/******************************************************************
Stylesheet: Admin Stylesheet
******************************************************************/

.wp-list-table thead
	.column-thumbnail
		width 60px
.acf_postbox
	.sub_field
		.field-repeater-toggle
			display none
		.position_preview
			width 100%
			max-width 500px
			height 240px
			display block
			background rgba(0,0,255,0.2)
			border solid 1px blue
			margin-bottom 10px
			position relative
			.content-box
				position absolute
				width 50%
				height 50%
				top 30%
				left 5%
				display block
				background rgba(255,0,0,0.2)
				border solid 1px red
			.preview-img
				width 100%
				height 100%
				opacity 0.8