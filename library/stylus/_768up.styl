MENU
*********************/
.js #menu-main
	position absolute!important
	overflow visible
	left 25%
	top 9.5em
	width auto!important
	clip auto

.js #menu-main.closed
	max-height none

#nav-toggle 
	display none
#menu-main li
	width auto
	*width 24.9% /* IE7 Hack */
	_width 19% /* IE6 Hack */

#menu-main 
	a 
		margin 0
		padding .85em
		float left
		text-align center
		border-bottom: 0
		//border-right: 1px solid white
		background none
		color grey
		font-size .705em
		&:hover
			//background white
			color black
#menu-main li.current-menu-item
	background none
	a
		color black 
#menu-main ul ul a
	display none

